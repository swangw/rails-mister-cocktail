<h1><%= @cocktail.name %></h1>

<% if @cocktail.photo.attached? %>
  <%= cl_image_tag @cocktail.photo.key, height: 900, width: 1600, crop: :fill, class: "w-100" %>
<% else %>
  <img class="w-100" src="https://source.unsplash.com/1600x900/?<%= @cocktail.name %>-cocktail" alt="">
<% end %>

<ul>
  <% @cocktail.doses.each do |dose| %>
    <li class="mt-3">
      <p><%= dose.description %> of <%= dose.ingredient.name %>
        <%= link_to dose_path(dose), method: "delete", data: { confirm: "Are you sure?"} do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </p>
    </li>
  <% end %>
</ul>

<%= link_to "Add Dose", new_cocktail_dose_path(@cocktail), class: "btn btn-primary" %>
